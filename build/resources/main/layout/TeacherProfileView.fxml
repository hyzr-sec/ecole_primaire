<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ecole_primaire.TeacherProfileController" prefWidth="600" prefHeight="600">
    <VBox alignment="CENTER" spacing="20" styleClass="container" prefWidth="600" prefHeight="600">
        <!-- Title Text -->
        <Text text="Teacher Profile" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333;" />

        <!-- Teacher ID -->
        <HBox spacing="10" alignment="CENTER">
            <Text text="Teacher ID:" style="-fx-font-size: 16px;"/>
            <Label fx:id="teacherIdLabel" style="-fx-font-size: 16px;"/>
        </HBox>

        <!-- Name -->
        <HBox spacing="10" alignment="CENTER">
            <Text text="Name:" style="-fx-font-size: 16px;"/>
            <Label fx:id="nameLabel" style="-fx-font-size: 16px;"/>
        </HBox>

        <!-- Email -->
        <HBox spacing="10" alignment="CENTER">
            <Text text="Email:" style="-fx-font-size: 16px;"/>
            <Label fx:id="emailLabel" style="-fx-font-size: 16px;"/>
        </HBox>

        <!-- Subject -->
        <HBox spacing="10" alignment="CENTER">
            <Text text="Subject:" style="-fx-font-size: 16px;"/>
            <Label fx:id="subjectLabel" style="-fx-font-size: 16px;"/>
        </HBox>

        <!-- Back Button -->
        <Button text="Back" fx:id="backButton" onAction="#handleBackAction" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
    </VBox>
</AnchorPane>
