<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ecole_primaire.MatiereController" spacing="20" alignment="CENTER" stylesheets="/styles/deep.css">
    <!-- Back Button to navigate to Eleve Dashboard -->
    <Button text="Retour au Dashboard" fx:id="backButton" onAction="#handleBackAction"
            styleClass="back-button" />

    <!-- Section Title -->
    <Label text="Liste des Matières" styleClass="section-title"/>

    <!-- Table for Matières -->
    <TableView fx:id="matiereTable" prefHeight="400" prefWidth="600" styleClass="table">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="200" />
            <TableColumn fx:id="nameColumn" text="Nom de la Matière" prefWidth="400" />
        </columns>
    </TableView>
</VBox>
